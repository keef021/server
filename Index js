import express from "express";
import sqlite3 from "better-sqlite3";

const app = express();
const port = process.env.PORT || 3000;

// Conecta ou cria banco
const db = sqlite3("./db.sqlite");

// Cria tabela se nÃ£o existir
db.prepare(`CREATE TABLE IF NOT EXISTS keys (
  key TEXT PRIMARY KEY,
  expiresAt INTEGER
)`).run();

// Rotas
app.use(express.json());
app.use("/api/gerar", (req,res) => {
  const crypto = require("crypto");
  const key = crypto.randomBytes(6).toString("hex").toUpperCase();
  const expiresAt = Date.now() + 24*60*60*1000; // 24h

  const stmt = db.prepare("INSERT INTO keys (key, expiresAt) VALUES (?, ?)");
  stmt.run(key, expiresAt);

  res.json({ key, expiresAt });
});

app.use("/api/validar", (req,res) => {
  const key = req.query.key;
  if(!key) return res.json({ valid: false });

  const row = db.prepare("SELECT * FROM keys WHERE key=?").get(key);
  if(!row) return res.json({ valid:false });

  if(Date.now() > row.expiresAt){
    // key expirada
    db.prepare("DELETE FROM keys WHERE key=?").run(key);
    return res.json({ valid:false });
  }

  res.json({ valid:true });
});

// Start server
app.listen(port, ()=>console.log(`Servidor rodando na porta ${port}`));
